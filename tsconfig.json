{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "declaration": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "skipDefaultLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
    },
    "include": [
        "src"
    ]
}
