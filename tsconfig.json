{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "skipDefaultLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "stripInternal": true,
        "rootDir": "src/",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/__tests/**",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "src/**/*.stories.ts",
        "src/**/*.stories.tsx"
    ]
}
